@model IEnumerable<SmartDomain.RolePermission>
    @using SmartHelper;
    @{
        ViewData["Title"] = "Permissions On Role";
    }

    <section class="content-header">
        <h1>
            @ViewData["Title"]
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/Home/Dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">@ViewData["Title"]</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">
                            Permissions:  @ViewBag.RoleName
                        </h3>

                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        @if (ViewData["Error"] != null)
                        {<div class="container">
                                <strong class="">Error:</strong>
                                <div class="panel panel-danger">
                                    <div class="panel-body">@ViewData["Error"].ToString()</div>
                                </div>

                            </div>
                        }
                        <br />
                        <div class="dataTable_wrapper">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Last Changed Date</th>
                                        <th>Changed By</th>
                                        <th>Active Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            @{ string activeStatus = UtilityService.ShowYesOrNo(item.IsActive);
                                                string dateCreated = UtilityService.ShowDateTime(item.LastChangedDate);
                                                string roleStatus = @item.IsActive ? "Deactivate" : "Reactivate";

                                            }

                                            <td>@Html.DisplayFor(modelItem => item.Permission.Name)</td>
                                            <td>@dateCreated</td>
                                            <td>@Html.DisplayFor(modelItem => item.LastChangedBy)</td>

                                            <td>@activeStatus</td>
                                            <td><a asp-controller="Roles" asp-action="ChangePermissionStatus" asp-route-id="@item.RolePermissionID" asp-route-roleID="@ViewBag.RoleID" asp-route-status="@item.IsActive">@roleStatus</a> | <a href="" onclick="Delete('@item.RolePermissionID,@item.RoleID')">Remove</a></td>
                                        </tr>
                                    }
                            </table>
                        </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">

                            <a asp-controller="Roles" asp-action="ViewRole" asp-route-id="@ViewBag.RoleID" class="btn btn-default">Cancel</a><br />
                        </div>
                    </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>

    <!-- DataTables -->

  
    <script>
   
        function Delete(id, roleID){
             var txt;
        var r = confirm("Are you sure you want to Delete?");
        if (r == true) {

            $.ajax(
            {
                type: "POST",
                url: '@Url.Action("RemovePermission", "Roles")',
                data: {
                    id: id,
                    roleID: roleID
                },
                error: function (result) {
                    alert("error");
                },
                success: function (result) {
                    if (result == true) {
                        var baseUrl ="/Roles";
                        window.location.reload();
                    }
                    else {
                        alert("There is a problem, Try Later!");
                    }
                }
            });
        }
    }
    </script>
