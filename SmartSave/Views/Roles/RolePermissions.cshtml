@model IEnumerable<SmartDomain.RolePermission>
@using SmartHelper;
@{
    ViewData["Title"] = "Permissions On Role";
}

<section class="content-header">
    <h1>
        @ViewData["Title"]
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">@ViewData["Title"]</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">
                        Permissions:  @ViewBag.RoleName
                    </h3>

                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    @if (ViewData["Error"] != null)
                    {<div class="container">
                            <strong class="">Error:</strong>
                            <div class="panel panel-danger">
                                <div class="panel-body">@ViewData["Error"].ToString()</div>
                            </div>

                        </div>
                    }
                    <br />
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Last Changed Date</th>
                                    <th>Changed By</th>
                                    @if (UtilityService.HasPermission(Permissions.Remove_Permissions))
                                    {
                                        <th>Action</th>
                                    }
                                    </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        @{
                                            string dateCreated = UtilityService.ShowDateTime(item.LastChangedDate);
                                        }
                                        @if (UtilityService.HasPermission(Permissions.View_Permissions))
                                        {
                                            <td><a target="_blank" asp-controller="Roles" asp-action="ViewPermission" asp-route-id="@item.PermissionID">@item.Permission.Name</a></td>

                                        }
                                        else
                                        {
                                            <td>@item.Permission.Name</td>

                                        }
                                        <td>@dateCreated</td>
                                        <td>@Html.DisplayFor(modelItem => item.LastChangedBy)</td>
                                        @if (UtilityService.HasPermission(Permissions.Remove_Permissions))
                                        {
                                            <td><a asp-controller="Roles" asp-action="RemovePermission" asp-route-id="@item.PermissionID" asp-route-roleID="@item.RoleID">Remove</a></td>
                                        }
                                    </tr>
                                }
                        </table>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">

                    <a asp-controller="Roles" asp-action="ViewRole" asp-route-id="@ViewBag.RoleID" class="btn btn-default">Cancel</a><br />
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<!-- DataTables -->
<script src="~/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<!-- page script -->
<script>
    $(function () {
        $('#example1').DataTable();
    });

</script>