@model SmartDomain.ClientCourse

@using SmartHelper;
@using System.Collections.Generic;
@{
    ViewData["Title"] = "Client Details";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @Model.Client.ClientRef
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">@Model.Client.ClientFullName</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" method="post" action="ViewClientProduct">
            <div class="box-body">
                @if (TempData["Error"] != null)
                {<div class="container">
                        <strong class="">@TempData["Error"].ToString()</strong>
                        <div class="panel panel-danger">
                            <div class="panel-body">@Html.ValidationSummary()</div>
                        </div>
                    </div>
                }
                <div class="form-group">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Account Number</label>
                        <div class="col-sm-10">
                            <label for="inputEmail3" class="form-control label-default">@Model.Client.AccountNumber</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">User Name</label>
                        <div class="col-sm-10">
                            <label for="inputEmail3" class="form-control label-default">@Model.Client.UserName</label>
                        </div>
                    </div>
                    <label for="inputEmail3" class="col-sm-2 control-label">First Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="FirstName" placeholder="First Name" value="@Model.Client.FirstName">

                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Last Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="LastName" placeholder="Last Name" value="@Model.Client.LastName">

                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">National ID / Birth Entry No</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="IDNumber" placeholder="National ID" value="@Model.Client.IDNumber">

                    </div>
                </div>


                <div class="form-group">
                    <label asp-for="@Model.Client.DateOfBirth" class="col-sm-2 control-label">Date Of Birth</label>
                    <div class="col-sm-10">
                        <input asp-for="@Model.Client.DateOfBirth" type="date" class="form-control" />
                        <span asp-validation-for="@Model.Client.DateOfBirth" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Gender</label>

                    <div class="col-sm-10">
                        <select asp-for="@Model.Client.GenderID" class="form-control"
                                asp-items="ViewBag.GenderList">
                            <option></option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>

                    <div class="col-sm-10">
                        <input type="email" class="form-control" name="EmailAddress" value="@Model.Client.EmailAddress">
                    </div>

                </div>


                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Residential Address</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" name="ResidentialAddress" rows="6" cols="40" value="@Model.Client.ResidentialAddress">@Model.Client.ResidentialAddress</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Mobile Number</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="MobileNumber" value="@Model.Client.MobileNumber">

                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Client.DepartmentID" class="col-sm-2 control-label">Department</label>

                    <div class="col-sm-10">
                        <select asp-for="@Model.Client.DepartmentID" class="form-control" asp-items="ViewBag.DepartmentList">
                            <option value="">----</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Is Active</label>
                    <div class="col-sm-10 checkbox">
                        <div class="form-group">

                            <div class="checkbox">
                                <label>
                                    <input asp-for="@Model.Client.IsActive" />
                                </label>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Registration Date</label>
                    <div class="col-sm-10">
                        <label for="inputEmail3" class="form-control label-default">@UtilityService.ShowDateTime(@Model.Client.RegistrationDate)</label>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Last Changed By</label>
                    <div class="col-sm-10">
                        <label for="inputEmail3" class="form-control label-default">@Model.Client.LastChangedBy</label>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Last Updated</label>
                    <div class="col-sm-10">
                        <label for="inputEmail3" class="form-control label-default">@UtilityService.ShowDateTime(@Model.Client.LastChangedDate)</label>
                    </div>
                </div>
                <input type="hidden" name="ClientID" value="@Model.ClientID" />

            </div>
            <!-- /.box-body -->
            <div class="box-footer">

            </div>
            <!-- /.box-footer -->


        </form>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Information
                    </div>
                    <!-- /.panel-heading -->
                    <form method="post" asp-controller="Client" asp-action="ViewClientCourse">

                        <div class="modal-body">
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Product</label>
                                <select asp-for="CourseID" class="form-control" asp-items="ViewBag.CourseList">
                                    <option value="">----</option>
                                </select>

                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Sessions</label>
                                <div>
                                    <div class="checkbox">
                                        @{
                                            int sessions = Model.Course.CourseOutlines == null ? 0 : Model.Course.CourseOutlines.Count();

                                        }
                                        @if (UtilityService.HasPermission(Permissions.Update_Client_Course))
                                        {
                                            <label>
                                                <a data-toggle="modal" data-target="#CourseSessions">@sessions</a>
                                            </label>
                                        }
                                        else
                                        {
                                            <label>
                                                <a>@sessions</a>
                                            </label>
                                        }

                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Is De-Registered</label>
                                <div>
                                    <div class="checkbox">
                                        <label>
                                            <input asp-for="@Model.IsDeRegistered" />
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label  for="inputEmail3" asp-for="DateCompleted" class="col-sm-2 control-label">Date Completed</label>
                               
                                    <input asp-for="DateCompleted" type="date" class="form-control" />
                                    <span asp-validation-for="DateCompleted" class="text-danger"></span>
                             
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Registration Date</label>

                                <label for="inputEmail3" class="form-control label-default">@UtilityService.ShowDateTime(@Model.DateRegistered)</label>

                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Last Changed By</label>

                                <label for="inputEmail3" class="form-control label-default">@Model.LastChangedBy</label>

                            </div>

                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Last Updated</label>

                                <label for="inputEmail3" class="form-control label-default">@UtilityService.ShowDateTime(@Model.LastChangedDate)</label>

                            </div>



                            <input type="hidden" name="ClientCourseID" value="@Model.ClientCourseID" />

                        </div>
                        <div class="modal-footer">
                            @if (UtilityService.HasPermission(Permissions.Update_Client_Course))
                            {
                                <button type="submit" class="btn btn-primary">Update</button>
                            }
                            @if (UtilityService.HasPermission(Permissions.View_Client))
                            {<a class="btn btn-info" asp-controller="Client" asp-action="ViewClient" asp-route-id="@Model.ClientID">View More Products</a>
                            } <a class="btn btn-default" asp-controller="Home" asp-action="Dashboard">Cancel</a>
                            </div>

                    </form>
                </div>
            </div>
        </div>

    </div>
    <!-- /.box -->
</section>
<div class="modal fade" id="CourseSessions" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Model.Course.Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-controller="Client" asp-action="UpdateSessions">
                <div class="modal-body">
                    <div class="form-group">
                        <div class="dataTable_wrapper">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">

                                <tr>
                                    @{
                                        int cnt = 0;
                                        List<CheckBoxListItem> sessionsList = ViewBag.SessionsList;

                                        foreach (var session in sessionsList)
                                        {
                                            if (cnt++ % 2 == 0)
                                            {
                                            @:</tr><tr>
                                            }
                                            @:<td>
                                                <input type="checkbox"
                                                       name="selectedSessions"
                                                       value="@session.ID"
                                                       @(Html.Raw(session.IsChecked ? "checked=\"checked\"" : "")) />
                                                @session.Name
                                            @:</td>
                                        }
                                    @:</tr>
                                    }
                                </table>
                            </div>

                        </div>
                        <input type="hidden" name="CourseID" value="@Model.CourseID" />
                        <input type="hidden" name="ClientCourseID" value="@Model.ClientCourseID" />

                   </div>
                <div class="modal-footer">
                    @if (UtilityService.HasPermission(Permissions.Update_Client_Course))
                    {
                        @if (!@Model.IsDeRegistered || !@Model.DateCompleted.HasValue)
                        {
                            <button type="submit" class="btn btn-primary">Mark Sessions As Complete</button>}
                    }
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                    </div>
                </form>
            </div>
        </div>
    </div>


