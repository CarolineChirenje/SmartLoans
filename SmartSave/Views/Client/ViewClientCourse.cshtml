@model SmartDomain.ClientCourse

@using SmartHelper;
@using System.Collections.Generic;
@{
    TempData["Title"] = "Client Details";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @Model.Client.ClientRef
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <partial name="_MessageDisplay" />
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">@Model.Client.ClientFullName</h3>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Information
                    </div>
                    <!-- /.panel-heading -->
                    <form method="post" asp-controller="Client" asp-action="ViewClientCourse">

                        <div class="modal-body">
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Course Programe</label>
                                <select asp-for="CourseID" class="form-control" asp-items="ViewBag.CourseList">
                                    <option value="">----</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Intake</label>
                                <select asp-for="CourseIntakeID" class="form-control" asp-items="ViewBag.CourseIntakeList">
                                    <option value="">----</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Sessions</label>
                                <div>
                                    <div class="checkbox">
                                        @{
                                            int sessions = Model.Course.CourseTopics == null ? 0 : Model.Course.CourseTopics.Count();

                                        }
                                        @if (UtilityService.HasPermission(Permissions.Update_Client_Course))
                                        {
                                        <label>
                                            @*<a data-toggle="modal" data-target="#CourseSessions">@sessions</a>*@
                                            <a target="_blank" asp-controller="Client" asp-action="ViewSessions" asp-route-courseID="@Model.CourseID" asp-route-clientcourseid="@Model.ClientCourseID">@sessions</a>
                                        </label>
                                        }
                                        else
                                        {
                                            <label>
                                                <a>@sessions</a>
                                            </label>
                                        }

                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Is De-Registered</label>
                                <div>
                                    <div class="checkbox">
                                        <label>
                                            <input asp-for="@Model.IsDeRegistered" />
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="inputEmail3" asp-for="DateCompleted" class="col-sm-2 control-label">Date Completed</label>

                                <input asp-for="DateCompleted" type="date" class="form-control" />
                                <span asp-validation-for="DateCompleted" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Registration Date</label>

                                <label for="inputEmail3" class="form-control label-default">@UtilityService.ShowDateTime(@Model.DateRegistered)</label>

                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Last Changed By</label>

                                <label for="inputEmail3" class="form-control label-default">@Model.LastChangedBy</label>

                            </div>

                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Last Updated</label>

                                <label for="inputEmail3" class="form-control label-default">@UtilityService.ShowDateTime(@Model.LastChangedDate)</label>

                            </div>

                            <input type="hidden" name="ClientCourseID" value="@Model.ClientCourseID" />

                        </div>
                        <div class="modal-footer">
                            @if (UtilityService.HasPermission(Permissions.Update_Client_Course))
                            {
                                <button type="submit" class="btn btn-primary">Update</button>
                            }
                            @if (UtilityService.HasPermission(Permissions.View_Client))
                            {<a class="btn btn-info" asp-controller="Client" asp-action="Courses" asp-route-id="@Model.ClientID">View More Programmes</a>
                            } <a class="btn btn-default" asp-controller="Client" asp-action="ViewClient" asp-route-id="@Model.ClientID">Cancel</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>

    </div>
    <!-- /.box -->
</section>
<div class="modal fade" id="CourseSessions" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Model.Course.Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-controller="Client" asp-action="UpdateSessions">
                <div class="modal-body">
                    <div class="form-group">
                        <div class="dataTable_wrapper">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">

                                <tr>
                                    @{
                                        int cnt = 0;
                                        List<CheckBoxListItem> sessionsList = ViewBag.SessionsList;

                                        foreach (var session in sessionsList)
                                        {
                                            if (cnt++ % 2 == 0)
                                            {
                                            @:</tr><tr>
                                            }
                                            @:<td>
                                                <input type="checkbox"
                                                       name="selectedSessions"
                                                       value="@session.ID"
                                                       @(Html.Raw(session.IsChecked ? "checked=\"checked\"" : "")) />
                                                @session.Name
                                            @:</td>
                                        }
                                    @:</tr>
                                    }
                                </table>
                            </div>

                        </div>
                        <input type="hidden" name="CourseID" value="@Model.CourseID" />
                        <input type="hidden" name="ClientCourseID" value="@Model.ClientCourseID" />

                    </div>
                    <div class="modal-footer">
                        @if (UtilityService.HasPermission(Permissions.Update_Client_Course))
                        {
                            @if (!@Model.IsDeRegistered || !@Model.DateCompleted.HasValue)
                            {
                                <button type="submit" class="btn btn-primary">Mark Sessions As Complete</button>}
                        }
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                    </div>
                </form>
            </div>
        </div>
    </div>

 