@model IEnumerable<SmartDomain.Client>
@using SmartHelper;
@{
    ViewData["Title"] = "Employees";
}

<section class="content-header">
    <h1>
        @ViewData["Title"]
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">@ViewData["Title"]</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Manage Employees</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    @if (ViewData["Error"] != null)
                    {<div class="container">
                            <strong class="">@ViewData["Error"].ToString()</strong>
                            <div class="panel panel-danger">
                                <div class="panel-body">@Html.ValidationSummary()</div>
                            </div>
                        </div>
                    }
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Employee Number</th>
                                    <th>Full Name</th>
                                    <th>Date of Birth</th>
                                    <th>Gender</th>
                                    <th>Email</th>
                                    <th>Registration Date</th>
                                    <th>Is Active</th>
                                </tr>
                            </thead>
                            <tbody class="odd gradeX">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @{
                                            string activeStatus = UtilityService.ShowYesOrNo(item.IsActive);
                                            string dateCreated = UtilityService.ShowDateTime(item.LastChangedDate);
                                            string dateRegistered = UtilityService.ShowDateTime(item.RegistrationDate);
                                            string dob = UtilityService.ShowDate(item.DateOfBirth);
                                            string ClientStatus = UtilityService.ShowActiveAction(@item.IsActive);
                                            string gender = UtilityService.ShowGender(@item.GenderID);

                                        }
                                        @if (UtilityService.HasPermission(Permissions.View_Client))
                                        {
                                            <td><a asp-controller="Client" asp-action="ViewClient" asp-route-id="@item.ClientID">@Html.DisplayFor(modelItem => item.AccountNumber)</a> </td>
                                        }
                                        else
                                        {

                                            <td>@Html.DisplayFor(modelItem => item.AccountNumber) </td>
                                        }
                                        <td>@Html.DisplayFor(modelItem => item.ClientFullName)</td>
                                        <td>@dob</td>
                                        <td>@gender</td>
                                        <td>@Html.DisplayFor(modelItem => item.EmailAddress)</td>
                                        <td>@dateRegistered</td>
                                        <td>@activeStatus</td>

                                    </tr>
                                }
                        </table>
                    </div>
                </div>
                <div class="box-footer">
                    <a class="btn btn-default" asp-controller="Home" asp-action="Dashboard">Cancel</a>
                    @if (UtilityService.HasPermission(Permissions.Add_Client))
                    {
                        <a class="btn btn-success pull-right" asp-controller="Client" asp-action="AddClient">New</a><br />
                    }
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>


<script>

    function Delete(id){
       // alert(id)
        var txt;
        var r = confirm("Are you sure you want to Delete?");
        if (r == true) {

            $.ajax(
            {
                type: "POST",
                url: '@Url.Action("Delete", "Client")',
                data: {
                    id: id
                },
                error: function (result) {
                    alert("error");
                },
                success: function (result) {
                    if (result == true) {
                        var baseUrl="/Clients";
                        window.location.reload();
                    }
                    else {
                        alert("There is a problem, Try Later!");
                    }
                }
            });
        }
    }
</script>