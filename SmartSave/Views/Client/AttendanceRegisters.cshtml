@model SmartInterfaces.Register;
@using SmartHelper;
@using System.Collections.Generic;
@{
    TempData["Title"] = "Client Details";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @Model.ClientForm.ClientRef
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
           <div class="row">
              <div class="col-lg-12">
                  <div class="tab-pane fade in" id="Register">
                      <div class="panel panel-default">
                          <div class="panel-heading">
                              @Model.ClientForm.ClientRef - Attendance Register
                          </div>
                      </div>
                      <!-- /.panel-heading -->
                      <div class="panel-body">
                          <div class="dataTable_wrapper">
                              <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                  <thead>
                                      <tr>

                                          <th>Course</th>
                                          <th>Intake</th>
                                          <th>Attendance Date</th>
                                          <th>Status</th>

                                      </tr>
                                  </thead>
                                  <tbody class="odd gradeX">
                                      @if (Model.RegisterList != null)
                                      {
                                          @foreach (var item in Model.RegisterList)
                                          {
                                              <tr>
                                                  <td>@Html.DisplayFor(modelItem => item.CourseTopic)</td>
                                                  <td>@Html.DisplayFor(modelItem => item.Intake)</td>
                                                  <td>@item.AttendanceDate</td>
                                                  <td>@item.Status</td>
                                              </tr>
                                          }
                                      }
                                  </tbody>
                              </table>
                          </div>
                          <div class="box-footer">

                              <a class="btn  btn-small btn-success pull-right" data-toggle="modal" data-target="#">Print</a>
                              <a class="btn btn-default" asp-controller="Client" asp-action="ViewClient" asp-route-id="@Model.ClientForm.ClientID">Cancel</a>

                          </div>
                      </div>
                  </div>


              </div>
        </div>

    <!-- /.box -->
</section>




