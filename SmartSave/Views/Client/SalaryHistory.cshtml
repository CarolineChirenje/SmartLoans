@model SmartInterfaces.SalaryHistory;
@using SmartHelper;
@using System.Collections.Generic;
@{
    TempData["Title"] = "Client Details";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @Model.ClientForm.ClientRef
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <partial name="_MessageDisplay" />
    <div class="row">
        <div class="col-lg-12">
            <div class="tab-pane fade in" id="Salaries">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @Model.ClientForm.ClientRef Salary History
                    </div>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Occupation</th>
                                    <th>Salary</th>
                                    <th>Last Changed By</th>
                                    <th>Last Changed Date</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.SalaryHistoryList != null)
                                {

                                    foreach (var item in Model.SalaryHistoryList)
                                    {
                                        var historyLists = Model.SalaryHistoryList.OrderByDescending(x => x.LastChangedDate);
                                        @foreach (var list in historyLists)
                                        {
                                            <tr>
                                                <td>@list.Occupation</td>
                                                <td>@list.Salary</td>
                                                <td>@list.LastChangedBy</td>
                                                <td>@list.LastChangedDate</td>

                                            </tr>
                                        }
                                    }
                                }
                        </table>
                    </div>
                </div>

                <div class="box-footer">

                    <a class="btn btn-default" asp-controller="Client" asp-action="ViewClient" asp-route-id="@Model.ClientForm.ClientID">Cancel</a>

                </div>
            </div>
        </div>
    </div>

    <!-- /.box -->
</section>

