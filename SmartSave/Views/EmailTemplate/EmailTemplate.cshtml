@model IEnumerable<SmartDomain.EmailTemplate>
@using SmartHelper;
@{
    ViewData["Title"] = "Email Templates";
}

<section class="content-header">
    <h1>
        @ViewData["Title"]
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">@ViewData["Title"]</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Manage Email Template</h3>

                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    @if (ViewData["Error"] != null)
                    {<div class="container">
                            <strong class="">@ViewData["Error"].ToString()</strong>
                            <div class="panel panel-danger">
                                <div class="panel-body">@Html.ValidationSummary()</div>
                            </div>
                        </div>
                    }
                    <div class="panel-body">
                        <div class="dataTable_wrapper">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>

                                        <th>Template Type</th>
                                        <th>Last Changed Date</th>
                                        <th>Last Changed By</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            @{
                                                string dateCreated = UtilityService.ShowDateTime(item.LastChangedDate);

                                            }
                                            <td>@Html.DisplayFor(modelItem => item.EmailType.Name)</td>
                                            <td>@dateCreated</td>
                                            <td>@Html.DisplayFor(modelItem => item.LastChangedBy)</td>
                                            <td><a asp-controller="EmailTemplate" asp-action="ViewEmailTemplate" asp-route-id="@item.EmailTemplateID">View</a> | <a asp-controller="EmailTemplate" asp-action="ActionEmailTemplate" asp-route-id="@item.EmailTemplateID">Delete</a></td>
                                        </tr>
                                    }
                            </table>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <a class="btn btn-default" asp-controller="Home" asp-action="Dashboard">Cancel</a>
                        <a href="AddEmailTemplate" class="btn btn-success pull-right">New Template</a><br />
                    </div>
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
    </div>
    <!-- /.row -->
</section>


<!-- page script -->
<script>

    function Delete(id){

        var txt;
        var r = confirm("Are you sure you want to Delete?");
        if (r == true) {

            $.ajax(
            {
                type: "POST",
                url: '@Url.Action("Delete", "EmailTemplate")',
                data: {
                    id: id
                },
                error: function (result) {
                    alert("error");
                },
                success: function (result) {
                    if (result == true) {
                        var baseUrl ="/EmailTemplate";
                        window.location.reload();
                    }
                    else {
                        alert("There is a problem, Try Later!");
                    }
                }
            });
        }
    }
</script>