@model IEnumerable<SmartDomain.CustomSetting>
@using SmartHelper;
@{
    ViewData["Title"] = "Custom Setting";
}

<section class="content-header">
    <h1>
        @ViewData["Title"]
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">@ViewData["Title"]</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Manage Custom Settings</h3>

                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    @if (ViewData["Error"] != null)
                    {<div class="container">
                            <strong class="">@ViewData["Error"].ToString()</strong>
                            <div class="panel panel-danger">
                                <div class="panel-body">@Html.ValidationSummary()</div>
                            </div>
                        </div>
                    }
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Setting Coverage</th>
                                    <th>Variable Type</th>
                                    <th>Value</th>
                                    <th>Active Status</th>
                                    <th>Last Changed Date</th>
                                    <th>Last Changed By</th>
                                                                   </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                <tr>
                                    @{ string activeStatus = UtilityService.ShowYesOrNo(item.IsActive);
                                        string dateCreated = UtilityService.ShowDateTime(item.LastChangedDate);
                                        string status = @item.IsActive ? "Deactivate" : "Reactivate";
                                        string value = @item.Value;

                                    }
                                    @if (UtilityService.HasPermission(Permissions.View_Custom_Setting))
                                    {
                                        <td><a asp-controller="CustomSettings" asp-action="ViewCustomSettings" asp-route-id="@item.CustomSettingID">@item.Name</a></td>
                                    }
                                    else
                                    {

                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    }
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CustomSettingType.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CustomVariableType.Name)</td>
                                    <td>@value</td>
                                    <td>@activeStatus</td>
                                    <td>@dateCreated</td>
                                    <td>@Html.DisplayFor(modelItem => item.LastChangedBy)</td>

                                </tr>
                                }
                        </table>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <a class="btn btn-default" asp-controller="Home" asp-action="Dashboard">Cancel</a>
                  
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<!-- page script -->
<script>

    function Delete(id){
       // alert(id)
        var txt;
        var r = confirm("Are you sure you want to Delete?");
        if (r == true) {

            $.ajax(
            {
                type: "POST",
                url: '@Url.Action("Delete", "CustomSetting")',
                data: {
                    id: id
                },
                error: function (result) {
                    alert("error");
                },
                success: function (result) {
                    if (result == true) {
                        var baseUrl ="/CustomSettings";
                        window.location.reload();
                    }
                    else {
                        alert("There is a problem, Try Later!");
                    }
                }
            });
        }
    }
</script>