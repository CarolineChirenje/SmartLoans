@model IEnumerable<SmartDomain.CustomSetting>
@using SmartHelper;
@{
    TempData["Title"] = "Custom Settings";
}

<section class="content-header">
    <h1>
        @TempData["Title"]
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">@TempData["Title"]</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Manage Custom Settings</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    @if (TempData["Error"] != null)
                    {<div class="container">
                            <div class="text-danger">@TempData["Error"].ToString()</div>
                        </div>
                    }

                    @if (TempData["Success"] != null)
                    {<div class="container">
                            <div class="text-success">@TempData["Success"].ToString()</div>
                        </div>
                    }
                    @if (TempData["Warning"] != null)
                    {<div class="container">
                            <div class="text-warning">@TempData["Warning"].ToString()</div>
                        </div>
                    }
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Setting Coverage</th>
                                    <th>Variable Type</th>
                                    <th>Value</th>
                                    <th>Is Active</th>
                                    <th>Last Changed Date</th>
                                    <th>Last Changed By</th>
                                </tr>
                            </thead>
                            <tbody class="odd gradeX">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @{ string activeStatus = UtilityService.ShowYesOrNo(item.IsActive);
                                            string dateCreated = UtilityService.ShowDateTime(item.LastChangedDate);
                                            string status = @item.IsActive ? "Deactivate" : "Reactivate";
                                            string value = @item.Value;

                                        }
                                        @if (UtilityService.HasPermission(Permissions.View_Custom_Setting))
                                        {
                                            <td><a asp-controller="CustomSettings" asp-action="ViewCustomSettings" asp-route-id="@item.CustomSettingID">@item.Name</a></td>
                                        }
                                        else
                                        {

                                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        }
                                         <td>@Html.DisplayFor(modelItem => item.CustomSettingType.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.CustomVariableType.Name)</td>
                                        <td>@value</td>
                                        <td>@activeStatus</td>
                                        <td>@dateCreated</td>
                                        <td>@Html.DisplayFor(modelItem => item.LastChangedBy)</td>

                                    </tr>
                                 
                                }
</table>
                    </div>
                </div>
                <div class="box-footer">
                    <a class="btn btn-default" asp-controller="Home" asp-action="Dashboard">Cancel</a>
                                    </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<!-- DataTables -->
<script src="~/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<!-- page script -->
<script>
    $(function () {
        $('#example1').DataTable();
    });

</script>