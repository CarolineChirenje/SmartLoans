@model IEnumerable<SmartDomain.BankAccount>
@using SmartHelper;
@{
    ViewData["Title"] = "Bank Accounts";
}

<section class="content-header">
    <h1>
        @ViewData["Title"]
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">@ViewData["Title"]</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Manage Bank Accounts</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Account Type</th>
                                    <th>Account Number</th>
                                    <th>Bank Name</th>
                                    <th>Active Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @{ string activeStatus = UtilityService.ShowYesOrNo(item.IsActive);
                                            string dateCreated = UtilityService.ShowDateTime(item.LastChangedDate);
                                            string activateStatus = UtilityService.ShowActiveAction(@item.IsActive);
                                            string accountNum = item.AccountCode + "-" + item.AccountNumber;

                                        }

                                        <td>@Html.DisplayFor(modelItem => item.BankAccountType.Name)</td>
                                        <td>@accountNum</td>
                                        <td>@Html.DisplayFor(modelItem => item.AccountName)</td>
                                        <td>@activeStatus</td>

                                        <td><a asp-controller="BankAccounts" asp-action="ViewBankAccount" asp-route-id="@item.BankAccountID">View</a> | <a asp-controller="BankAccounts" asp-action="ChangeBankAccountstatus" asp-route-id="@item.BankAccountID" asp-route-status="@item.IsActive">@activateStatus</a> | <a href="" onclick="Delete('@item.BankAccountID')">Delete</a></td>
                                    </tr>
                                }
                        </table>
                    </div>
                </div>
                <div class="box-footer">
                    <a class="btn btn-default" asp-controller="Home" asp-action="Dashboard">Cancel</a>
                    <a class="btn btn-success pull-right" asp-controller="BankAccounts" asp-action="AddBankAccount">New</a><br />

                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<script>

    function Delete(id){
       // alert(id)
        var txt;
        var r = confirm("Are you sure you want to Delete?");
        if (r == true) {

            $.ajax(
            {
                type: "POST",
                url: '@Url.Action("Delete", "BankAccounts")',
                data: {
                    id: id
                },
                error: function (result) {
                    alert("error");
                },
                success: function (result) {
                    if (result == true) {
                        var baseUrl="/Users";
                        window.location.reload();
                    }
                    else {
                        alert("There is a problem, Try Later!");
                    }
                }
            });
        }
    }
</script>