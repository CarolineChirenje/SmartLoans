
@using SmartHelper;

<section class="content-header">
    <h1>
        Dashboard
        <small>@UserAppData.ApplicationName</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="../Views/Home/Dashboard.cshtml"><i class="fa fa-dashboard"></i>Home</a></li>
        <li class="active">Dashboard</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    @if (TempData["Error"] != null)
    {<div class="container">
        <div class="text-danger">@TempData["Error"].ToString()</div>
    </div>
    <br />
    }
    <div class="container">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    </div>

    @if (TempData["Success"] != null)
    {<div class="container">
            <div class="text-success">@TempData["Success"].ToString()</div>
        </div>
    }
    @if (TempData["Warning"] != null)
    {<div class="container">
            <div class="text-warning">@TempData["Warning"].ToString()</div>
        </div>
    }
</section>
