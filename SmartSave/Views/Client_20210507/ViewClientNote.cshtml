@model SmartDomain.ClientNote
@using SmartExtensions;
@using SmartHelper;
@using System.Collections.Generic;
@{
    TempData["Title"] = "Client Details";
}

<!-- Content Header (Page header) -->

<section class="content-header">
    <h1>
        @Model.Client.ClientRef
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">@Model.Client.ClientFullName</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" method="post" action="ViewContact">
            <div class="box-body">


                @if (TempData["Error"] != null)
                {<div class="container">
                        <div class="text-danger">@TempData["Error"].ToString()</div>
                    </div>
                    <br />
                }
                <div class="container">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                </div>

                @if (TempData["Success"] != null)
                {<div class="container">
                        <div class="text-success">@TempData["Success"].ToString()</div>
                    </div>
                }
                @if (TempData["Warning"] != null)
                {<div class="container">
                        <div class="text-warning">@TempData["Warning"].ToString()</div>
                    </div>
                }
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Affiliation</label>

                    <div class="col-sm-10">
                        <select id="ClientGroupID" asp-for="@Model.Client.ClientGroupID" class="form-control" asp-items="ViewBag.AffiliationList" onchange="GetCompanyList(this.value)">
                        </select>
                        <span id="AffiliationListNotFound" class="text-danger text-bold"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Company</label>
                    <div class="col-sm-10">

                        <select asp-for="@Model.Client.CompanyID" asp-items="ViewBag.CompanyList" name="CompanyID" class="form-control">
                        </select>
                        <span id="CompanyListNotFound" class="text-danger text-bold"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Client.ClientAccountTypeID" class="col-sm-2 control-label">Account Type</label>

                    <div class="col-sm-10">
                        <select asp-for="@Model.Client.ClientAccountTypeID" class="form-control" asp-items="ViewBag.AccountTypes" onchange="showCoApplicantForm(this.value)">
                            <option value="">----</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Employee Number</label>
                    <div class="col-sm-10">
                        <label for="inputEmail3" class="form-control label-default">@Model.Client.AccountNumber</label>
                    </div>
                </div>
                <section>
                    <h5 class="box-title">Applicant Information</h5>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Title</label>
                        <div class="col-sm-10">
                            <select asp-for="@Model.Client.TitleID" class="form-control" asp-items="ViewBag.TitleList">
                                <option value="">----</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Initials</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Initials" placeholder="Initials" value="@Model.Client.Initials">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Last Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="LastName" placeholder="Last Name" value="@Model.Client.LastName">

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">First Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="FirstName" placeholder="First Name" value="@Model.Client.FirstName">
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Last Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="LastName" placeholder="Last Name" value="@Model.Client.LastName">

                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">National ID</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="IDNumber" placeholder="National ID" value="@Model.Client.IDNumber">

                        </div>
                    </div>


                    <div class="form-group">
                        <label asp-for="@Model.Client.DateOfBirth" class="col-sm-2 control-label">Date Of Birth</label>
                        <div class="col-sm-10">
                            <input asp-for="@Model.Client.DateOfBirth" type="date" class="form-control" />
                            <span asp-validation-for="@Model.Client.DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Gender</label>

                        <div class="col-sm-10">
                            <select asp-for="@Model.Client.GenderID" class="form-control"
                                    asp-items="ViewBag.GenderList">
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Email</label>

                        <div class="col-sm-10">
                            <input type="email" class="form-control" name="EmailAddress" value="@Model.Client.EmailAddress">
                        </div>

                    </div>


                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Address Line 1</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="AddressLine1" value="@Model.Client.AddressLine1">

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Address Line 2</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="AddressLine2" value="@Model.Client.AddressLine2">

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">City</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="City" value="@Model.Client.City">

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Country</label>
                        <div class="col-sm-10">
                            <select asp-for="@Model.Client.CountryID" class="form-control" asp-items="ViewBag.CountryList">
                                <option value="">----</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Mobile Number</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="MobileNumber" value="@Model.Client.MobileNumber">

                        </div>
                    </div>


                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Status</label>
                        <div class="col-sm-10 checkbox">
                            <div class="form-group">

                                <div class="checkbox">
                                    <label>
                                        <input asp-for="@Model.Client.IsActive" />
                                    </label>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Client.DepartmentID" class="col-sm-2 control-label">Department</label>

                        <div class="col-sm-10">
                            <select asp-for="@Model.Client.DepartmentID" class="form-control" asp-items="ViewBag.DepartmentList">
                                <option value="">----</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Occupation</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Occupation" value="@Model.Client.Occupation">

                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Salary</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="Salary" name="SalaryAmount" value="@Model.Client.Salary">
                            <span id="SalaryError" class="text-danger text-bold"></span>
                            <span><a href="" class="text-success" data-toggle="modal" data-target="#SalaryHistory">History</a></span>
                        </div>
                    </div>
                </section>
                @if (Model.Client.IsJointAccount && Model.Client.JointApplicant.IsNotNull())
                {
                    <section id="CoApplicantInfo">
                        <h5 class="box-title">Co-Applicant Information</h5>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Relation</label>
                            <div class="col-sm-10">
                                <select asp-for="Client.JointApplicant.RelationshipTypeID" class="form-control" asp-items="ViewBag.RelationTypes">
                                    <option value="">----</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Title</label>
                            <div class="col-sm-10">
                                <select asp-for="Client.JointApplicant.ApplicantTitleID" class="form-control" asp-items="ViewBag.TitleList">
                                    <option value="">----</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Initials</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="Client.JointApplicant.Initials" value="@Model.Client.JointApplicant.Initials">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">First Name</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="Client.JointApplicant.FirstName" value="@Model.Client.JointApplicant.FirstName">

                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Last Name</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="Client.JointApplicant.LastName" value="@Model.Client.JointApplicant.LastName" required>

                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">ID Number</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="Client.JointApplicant.IDNumber" value="@Model.Client.JointApplicant.IDNumber" required>

                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Date Of Birth</label>

                            <div class="col-sm-10">
                                <input asp-for="Client.JointApplicant.DateOfBirth" type="date" class="form-control" />
                                <span asp-validation-for="@Model.Client.JointApplicant.DateOfBirth" class="text-danger"></span>
                            </div>

                        </div>

                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Gender</label>
                            <div class="col-sm-10">
                                <select asp-for="Client.JointApplicant.ApplicantGenderID" class="form-control" asp-items="ViewBag.GenderList">
                                    <option value="">----</option>
                                </select>
                            </div>
                        </div>


                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Email</label>

                            <div class="col-sm-10">
                                <input type="email" class="form-control" asp-for="Client.JointApplicant.EmailAddress" value="@Model.Client.JointApplicant.EmailAddress" required>
                            </div>

                        </div>

                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Address Line 1</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="Client.JointApplicant.AddressLine1" value="@Model.Client.JointApplicant.AddressLine1">

                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Address Line 2</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="Client.JointApplicant.AddressLine2" value="@Model.Client.JointApplicant.AddressLine2">

                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">City</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="Client.JointApplicant.City" value="@Model.Client.JointApplicant.City">

                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Country</label>
                            <div class="col-sm-10">
                                <select asp-for="Client.JointApplicant.CountryID" class="form-control" asp-items="ViewBag.CountryList">
                                    <option value="">----</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Mobile Number</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="Client.JointApplicant.MobileNumber" value="@Model.Client.JointApplicant.MobileNumber">

                            </div>
                        </div>
                        <input type="hidden" asp-for="Client.JointApplicant.JointApplicantID" value="@Model.Client.JointApplicant.JointApplicantID" />
                    </section>
                }
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Registration Date</label>
                    <div class="col-sm-10">
                        <label for="inputEmail3" class="form-control label-default">@UtilityService.ShowDateTime(@Model.Client.RegistrationDate)</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Last Changed By</label>
                    <div class="col-sm-10">
                        <label for="inputEmail3" class="form-control label-default">@Model.Client.LastChangedBy</label>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Last Updated</label>
                    <div class="col-sm-10">
                        <label for="inputEmail3" class="form-control label-default">@UtilityService.ShowDateTime(@Model.Client.LastChangedDate)</label>
                    </div>
                </div>
                <input type="hidden" name="ClientID" value="@Model.ClientID" />

            </div>
            <!-- /.box-body -->
            <div class="box-footer">

            </div>
            <!-- /.box-footer -->


        </form>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Information
                    </div>
                    <!-- /.panel-heading -->
                    <form method="post" asp-controller="Client" asp-action="ViewClientNote">

                        <div class="modal-body">

                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Comment:</label>
                                <textarea class="form-control" name="Comment">@Model.Comment</textarea>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">DueDate:</label>
                                <input asp-for="@Model.DueDate" type="date" class="form-control" />
                                <span asp-validation-for="@Model.DueDate class=" text-danger"></span>
                            </div>
                            @if (UserAppData.CurrentUserTypeID != (int)TypeOfUser.Employee)
                            {
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label">Visible To Admin Only</label>
                                    <div class="checkbox">
                                        <label>
                                            <input asp-for="@Model.VisibleToAdminOnly" />
                                        </label>
                                    </div>
                                </div>
                            }
                            @{

                                string closedDate = UtilityService.ShowDateTime(Model.DateClosed);
                                string dateUploaded = UtilityService.ShowDateTime(Model.DateUploaded);

                            }
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Initiator</label>
                                <label for="inputEmail3" class="form-control label-default">@Model.UserType.Name</label>
                            </div>

                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Date Uploaded:</label>
                                <label for="inputEmail3" class="form-control label-default">@dateUploaded</label>
                            </div>

                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Date Closed:</label>
                                <label for="inputEmail3" class="form-control label-default">@closedDate</label>
                            </div>




                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Last Changed By</label>

                                <label for="inputEmail3" class="form-control label-default">@Model.LastChangedBy</label>

                            </div>

                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Last Updated</label>

                                <label for="inputEmail3" class="form-control label-default">@UtilityService.ShowDateTime(@Model.LastChangedDate)</label>

                            </div>



                            <input type="hidden" name="ClientNoteID" value="@Model.ClientNoteID" />

                        </div>
                        <div class="modal-footer">
                            @if (UserAppData.HasPermission(Permissions.Update_Client_Note))
                            {
                                <button type="submit" class="btn btn-primary">Update</button>
                                <a class="btn btn-success" asp-controller="Client" asp-action="CloseNote" asp-route-noteid="@Model.ClientNoteID" asp-route-Clientid="@Model.ClientID">Close</a>
                            }
                            @if (UserAppData.HasPermission(Permissions.Delete_Client_Product))
                            {
                                <a class="btn btn-danger" asp-controller="Client" asp-action="ActionNote" asp-route-noteid="@Model.ClientNoteID" asp-route-Clientid="@Model.ClientID">Delete</a>
                            }
                            @if (UserAppData.HasPermission(Permissions.View_Client))
                            {
                                <a class="btn btn-info" asp-controller="Client" asp-action="ViewClient" asp-route-id="@Model.ClientID">View More Notes</a>
                            } <a class="btn btn-default" asp-controller="Client" asp-action="Clients">Cancel</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>

    </div>
    <!-- /.box -->
</section>
<script>
    $(document).ready(function () {
        showCoApplicantForm();
    });

    function showCoApplicantForm(AccountTypeID) {
        var jointAccount = $("#JointAccountEnumValue").val();
        if (AccountTypeID === jointAccount) {
            $("#CoApplicantInfo").show();
        } else {
            $("#CoApplicantInfo").hide();
        }
    }
    function GetCompanyList(affiliationID) {
        var procemessage = "<option value='0'> Please wait whilst we retrieve Registered Companies...</option>";
        $("#CompanyList").html(procemessage).show();
        var url = "/Client/GetCompanyList/";
        // alert(affiliationID);
        $.ajax({
            url: url,
            data: { affiliationID: affiliationID },
            cache: false,
            type: "POST",
            success: function (data) {
                var markup = "";
                if (data == null || data.length == 0) {
                   if (affiliationID == 2) {
                        $("#AffiliationListNotFound").text("")
                    }
                    else {
                        $("#AffiliationListNotFound").text("No registered Companies Found")
                    }
                }
                else {
                    $("#AffiliationListNotFound").text("");
                    for (var x = 0; x < data.length; x++) {
                        markup += "<option value=" + data[x].value + ">" + data[x].text + "</option>";
                    }
                }
                $("#CompanyList").html(markup).show();
            },
            error: function (reponse) {
                alert("error : " + reponse);
            }
        });

    }
</script>

