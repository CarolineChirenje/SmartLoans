    $(function () {
        validateDecimalInput('#Period');
        validateDecimalInput('#Retirement');
        validateDecimalInput('#Committment');
        validateDecimalInput('#IncomeAverage');
        validateDecimalInput('#InvestmentAmount');
        validateDecimalInput('#InterestRate');
        validateDecimalInput('#Tenure');
        validateDecimalInput('#ContributionsMonth');
        validateDecimalInput('#PaymentsYear');
