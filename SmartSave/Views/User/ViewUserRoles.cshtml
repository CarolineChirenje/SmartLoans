@model SmartSave.Models.CheckBoxModel
@using SmartHelper;
@{
    ViewData["Title"] = "User Roles";
}

<section class="content-header">
    <h1>
        @ViewData["Title"]
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">@ViewData["Title"]</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Manage Roles - @ViewBag.UserName</h3>
                                 </div>
                <!-- /.box-header -->

                <div class="box-body">
                    @if (ViewData["Error"] != null)
                    {<div class="container">
                            <strong class="">@ViewData["Error"].ToString()</strong>
                            <div class="panel panel-danger">
                                <div class="panel-body">@Html.ValidationSummary()</div>
                            </div>
                        </div>
                    }
                    @foreach (var item in Model.AvailableItems)
                    {

                        <div class="col-md-4">
                            <label class="checkbox-inline">
                                                              <input type="checkbox" class="minimal" name="SelectedItems" value="@item.ID" @(item.IsChecked ?   "checked='checked'" : String.Empty)> @item.Value
                            </label>
                        </div>
                    }


                    <br />

                    <!-- /.box-body -->
                </div>
                <div class="box-footer">
                   <a class="btn btn-default" asp-controller="Home" asp-action="Dashboard">Cancel</a>
                    <a href="Add" class="btn btn-success pull-right">Update Profile</a><br />

                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        </div>
</section>

<!-- DataTables -->
<script src="~/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
