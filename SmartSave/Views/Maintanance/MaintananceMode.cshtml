@model SmartDomain.Maintanance
@using SmartHelper;

@{
    Layout = "_LayoutNoMenu";
}

<div !style="text-align:center">
    <main>
        <div class="container">
            <div class="row">
                <div class="col-lg-10">
                    <div class="text-center">
                        <h1 class="text-danger text-bold text-green">Planned Maintanance In Progress</h1>
                        <center>
                            <p>
                            
                                @UtilityService.ApplicationName is currently undergoing maintanance from <br /><b  style="color:red">@Model.Period</b>.<br /> We are constantly working hard to make a better product for you.Please be patient,the system will be back up shortly.
                                For any enquiry, please email <b>@UtilityService.CustomerServiceEmail</b> , or call<br />or <a href="@UtilityService.WhatappSendMessageLink" style="text-decoration: none;" target="_blank"><img src="~/dist/img/Whatsapp.png" class="user-image" alt="Link to Send Message on Whatsapp" width="25" height="25" /></a> @UtilityService.ApplicationName customer service  at <b>@UtilityService.CustomerServiceNumber</b>.<br /><br /> Regards,<br /><b>@UtilityService.ApplicationName Team</b>.
                            </p>
                        </center>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
