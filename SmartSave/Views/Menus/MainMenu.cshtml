@model IEnumerable<SmartDomain.MenuGroup>
    @using SmartHelper;
    @{
        ViewData["Title"] = "System Menu";
    }

    <section class="content-header">
        <h1>
            @ViewData["Title"]
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/Home/Dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">@ViewData["Title"]</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Manage Menu</h3>

                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        @if (ViewData["Error"] != null)
                        {<div class="container">
                                <strong class="">@ViewData["Error"].ToString()</strong>
                                <div class="panel panel-danger">
                                    <div class="panel-body">@Html.ValidationSummary()</div>
                                </div>
                            </div>
                        }
                        <div class="dataTable_wrapper">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Order No</th>
                                        <th>Is Active</th>
                                        <th>Is Active Tab</th>
                                        <th>Children</th>
                                        <th>Last Changed Date</th>
                                        <th>Last Changed By</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            @{ string activeStatus = UtilityService.ShowYesOrNo(item.IsActive);
                                                string activeTab = UtilityService.ShowYesOrNo(item.IsActiveMenu);
                                                string dateCreated = UtilityService.ShowDateTime(item.LastChangedDate);
                                                string objectStatus = @item.IsActive ? "Deactivate" : "Reactivate";

                                            }

                                            <td>@Html.DisplayFor(modelItem => item.DisplayName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.OrderNo)</td>
                                            <td>@activeStatus</td>
                                            <td>@activeTab</td>
                                            <td><a asp-controller="Menus" asp-action="ChildMenus" asp-route-id="@item.MenuGroupID">@item.Menus?.Count()</a></td>
                                            <td>@dateCreated</td>
                                            <td>@Html.DisplayFor(modelItem => item.LastChangedBy)</td>

                                            <td><a asp-controller="Menus" asp-action="ViewMenuGroup" asp-route-id="@item.MenuGroupID">View</a> |<a asp-controller="Menus" asp-action="MenuGroupStatus" asp-route-id="@item.MenuGroupID" asp-route-status="@item.IsActive">@objectStatus</a> | <a href="" onclick="Delete('@item.MenuGroupID')">Delete</a></td>
                                        </tr>
                                    }
                            </table>
                        </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <a class="btn btn-default" asp-controller="Home" asp-action="Dashboard">Cancel</a>
                        </div>
                    </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>

   
    <script>
   
    function Delete(id){
       // alert(id)
        var txt;
        var r = confirm("Are you sure you want to Delete?");
        if (r == true) {

            $.ajax(
            {
                type: "POST",
                url: '@Url.Action("Delete", "Menus")',
                data: {
                    id: id
                },
                error: function (result) {
                    alert("error");
                },
                success: function (result) {
                    if (result == true) {
                        var baseUrl ="/Menus";
                        window.location.reload();
                    }
                    else {
                        alert("There is a problem, Try Later!");
                    }
                }
            });
        }
    }
    </script>
