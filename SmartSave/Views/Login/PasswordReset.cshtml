
@model PasswordResetModel;
@using SmartHelper;
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@UserAppData.ApplicationName</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="~/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/AdminLTE.min.css">
    <link rel="stylesheet" href="~/dist/css/skins/skin-blue.min.css">
    <!-- Google Font -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page">
    <section class="content-header">
        @if (TempData["Error"] != null)
        {<div class="container">
                <div class="text-danger">@TempData["Error"].ToString()</div>
            </div>
            <br />
        }
        <div class="container">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>

        @if (TempData["Success"] != null)
        {<div class="container">
                <div class="text-success">@TempData["Success"].ToString()</div>
            </div>
        }
        @if (TempData["Warning"] != null)
        {<div class="container">
                <div class="text-warning">@TempData["Warning"].ToString()</div>
            </div>
        }
        <section class="content-header">
            @if (TempData["Error"] != null)
            {<div class="container">
                    <div class="text-danger" style="text-align:center">@TempData["Error"].ToString()</div>
                </div>
            }
            <div class="container">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>

            @if (TempData["Success"] != null)
            {<div class="container">
                    <div class="text-success" style="text-align:center">@TempData["Success"].ToString()</div>
                </div>
            }
            @if (TempData["Warning"] != null)
            {<div class="container">
                    <div class="text-warning" style="text-align:center">@TempData["Warning"].ToString()</div>
                </div>
            }

        </section>
    </section>
    <div class="login-logo">
        <a href="#">@UserAppData.ApplicationName</a>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">

                <p>&nbsp;</p>
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Password Reset </h3>
                    </div>

                    <div class="panel-body">
                        <form class="form-horizontal" method="post" action="ResetPassword">
                            <div class="login-box-body">
                                <fieldset>

                                    <div class="form-group">
                                        <input type="password" class="form-control" name="Password" placeholder="New Password" required autofocus>

                                    </div>

                                    <div class="form-group">
                                        <input type="password" class="form-control" name="ConfirmPassword" placeholder="Confirm Password" required>

                                    </div>
                                    <input type="hidden" name="UserID" value="@Model.UserID" />
                                    <input type="hidden" name="ResetTypeID" value="@Model.ResetTypeID" />

                                    <div class="form-group">
                                        <button type="submit" class="btn btn-lg btn-primary btn-block">Reset Password</button>

                                    </div><br />
                                    <div class="form-group">
                                        <a class="btn btn-lg btn-default btn-block" asp-controller="Login" asp-action="Login">Return to Login</a>
                                    </div>
                                </fieldset>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
