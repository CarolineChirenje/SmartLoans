@{
    ViewData["Title"] = "Error";
}
<h2>@ViewData["Title"]</h2>

<div id="layoutError_content">
    <main>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="text-center mt-4">
                        <h1 class="display-1">Oops</h1>
                        <p class="lead"> An error has occurred. This application may no longer respond until reloaded.</p>
                        <a class="btn btn-danger" asp-controller="Home" asp-action="Dashboard">
                            Return to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
