@model IEnumerable<SmartDomain.Course>
@using SmartHelper;
@{
    ViewData["Title"] = "Course List";
}

<section class="content-header">
    <h1>
        @ViewData["Title"]
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">@ViewData["Title"]</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Manage Courses</h3>

                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Credits</th>
                                <th>Sessions</th>
                                <th>Is Status</th>

                                <th>Last Changed Date</th>
                                <th>Last Changed By</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                            <tr>
                                @{ string activeStatus = UtilityService.ShowYesOrNo(item.IsActive);
                                    string dateCreated = UtilityService.ShowDateTime(item.LastChangedDate);
                                    string activateStatus = UtilityService.ShowActiveAction(@item.IsActive);
                                    int sessionCount = item.CourseOutlines == null ? 0 : item.CourseOutlines.Count();
                                }
                                @if (UtilityService.HasPermission(Permissions.Update_Document_Type))
                                {
                                    <td><a asp-controller="Courses" asp-action="ViewCourse" asp-route-id="@item.CourseID">@item.Title</a></td>
                                }
                                else
                                {

                                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                }
                                <td>@Html.DisplayFor(modelItem => item.Credits)</td>
                                <td>@sessionCount</td>
                                <td>@activeStatus</td>

                                <td>@dateCreated</td>
                                <td>@Html.DisplayFor(modelItem => item.LastChangedBy)</td>
                             </tr>
                            }
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <a class="btn btn-default" asp-controller="Home" asp-action="Dashboard">Cancel</a>
                    @if (UtilityService.HasPermission(Permissions.Add_Course))
                    {
                        <a class="btn btn-success pull-right" asp-controller="Courses" asp-action="AddCourse">New</a><br />
                    }
                    </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<!-- DataTables -->
<script src="~/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<!-- page script -->
<script>
    $(function () {
        $('#example1').DataTable();
    });
  
</script>