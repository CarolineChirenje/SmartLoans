@model SmartDomain.CourseSession
@using SmartHelper;
<section class="content-header">
    <h1>
        Session
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">

            <h3 class="box-title">@Model.CourseTopic.Name</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" method="post" action="/Courses/ViewCourseTopic">
            @if (TempData["Error"] != null)
            {<div class="container">
                    <div class="text-danger">@TempData["Error"].ToString()</div>
                </div>
                <br />
            }
            <div class="container">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>
            @if (TempData["Success"] != null)
            {<div class="container">
                    <div class="text-success">@TempData["Success"].ToString()</div>
                </div>
            }
            @if (TempData["Warning"] != null)
            {<div class="container">
                    <div class="text-warning">@TempData["Warning"].ToString()</div>
                </div>
            }
            <div class="box-body">

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Topic</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Title" value="@Model.CourseTopic.Name">
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Sessions</label>
                    <div class="col-sm-10">
                        <a asp-controller="Courses" asp-action="CourseSessions" asp-route-id="@Model.CourseTopicID">@Model.CourseTopic.CourseSessions?.Count()</a>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Is Active</label>
                    <div class="col-sm-2">
                        <label class="checkbox-inline">
                            @Html.CheckBoxFor(model => model.CourseTopic.IsActive)
                        </label>
                    </div>
                </div>


                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Last Changed By</label>
                    <div class="col-sm-10">
                        <label for="inputEmail3" class="form-control label-default">@Model.CourseTopic.LastChangedBy</label>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Last Updated</label>
                    <div class="col-sm-10">
                        <label for="inputEmail3" class="form-control label-default">@UtilityService.ShowDateTime(@Model.CourseTopic.LastChangedDate)</label>
                    </div>
                </div>
                <input type="hidden" name="CourseID" value="@Model.CourseTopicID" />
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <a class="btn btn-default" asp-controller="Courses" asp-action="Courses">Cancel</a>
                <button type="submit" class="btn btn-info pull-right">Update</button>
            </div>
            <!-- /.box-footer -->
        </form>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Information
                    </div>
                    <!-- /.panel-heading -->
                    <form method="post" asp-controller="Courses" asp-action="ViewCourseSession">

                        <div class="modal-body">
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Session:</label>
                                <input type="text" class="form-control" name="Name" value="@Model.Name">
                            </div>

                          
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Is Active</label>
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="@Model.IsActive" />
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Last Changed By</label>

                                <label for="inputEmail3" class="form-control label-default">@Model.LastChangedBy</label>

                            </div>

                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Last Updated</label>

                                <label for="inputEmail3" class="form-control label-default">@UtilityService.ShowDateTime(@Model.LastChangedDate)</label>

                            </div>
                            <input type="hidden" name="CourseTopicID" value="@Model.CourseTopicID" />
                            <input type="hidden" name="CourseID" value="@Model.CourseTopic.CourseID" />
                            <input type="hidden" name="CourseSessionID" value="@Model.CourseSessionID" />
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Update</button>
                            <a class="btn btn-danger" asp-controller="Courses" asp-action="ActionCourseSession" asp-route-sessionid="@Model.CourseSessionID" asp-route-coursetopicid="@Model.CourseTopic.CourseTopicID">Delete</a>
                            <a class="btn btn-info" asp-controller="Courses" asp-action="ViewCourseSession" asp-route-id="@Model.CourseSessionID">View More Details</a>
                            <a class="btn btn-default" asp-controller="Courses" asp-action="Courses">Cancel</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- /.box -->
   
</section>

