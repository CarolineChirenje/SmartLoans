@model SmartDomain.CourseIntake
@using SmartHelper;
<section class="content-header">
    <h1>
        Sessions
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">

            <h3 class="box-title">@Model.Course.Title</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" method="post" action="/Courses/ViewCourse">
            @if (TempData["Error"] != null)
            {<div class="container">
                    <div class="text-danger">@TempData["Error"].ToString()</div>
                </div>
                <br />
            }
            <div class="container">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>
            @if (TempData["Success"] != null)
            {<div class="container">
                    <div class="text-success">@TempData["Success"].ToString()</div>
                </div>
            }
            @if (TempData["Warning"] != null)
            {<div class="container">
                    <div class="text-warning">@TempData["Warning"].ToString()</div>
                </div>
            }
            <div class="box-body">

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Title</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Title" value="@Model.Course.Title">
                    </div>
                </div>

                                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Is Active</label>
                    <div class="col-sm-2">
                        <label class="checkbox-inline">
                            @Html.CheckBoxFor(model => model.Course.IsActive)
                        </label>
                    </div>
                </div>


                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Last Changed By</label>
                    <div class="col-sm-10">
                        <label for="inputEmail3" class="form-control label-default">@Model.Course.LastChangedBy</label>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Last Updated</label>
                    <div class="col-sm-10">
                        <label for="inputEmail3" class="form-control label-default">@UtilityService.ShowDateTime(@Model.Course.LastChangedDate)</label>
                    </div>
                </div>
                <input type="hidden" name="CourseID" value="@Model.CourseID" />
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <a class="btn btn-default" asp-controller="Courses" asp-action="Courses">Cancel</a>
                <button type="submit" class="btn btn-info pull-right">Update</button>
            </div>
            <!-- /.box-footer -->
        </form>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Information
                    </div>
                    <!-- /.panel-heading -->
                    <form method="post" asp-controller="Courses" asp-action="ViewCourseIntake">

                        <div class="modal-body">
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Intake Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="Name" value="@Model.Name">
                                </div>
                            </div>
                            &nbsp;

                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Start Date</label>
                                <div class="col-sm-10">
                                    <input type="date" class="form-control" asp-for="@Model.StartDate" required>
                                </div>
                            </div>
                            &nbsp;
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">End Date</label>

                                <div class="col-sm-10">
                                    <input type="date" class="form-control" asp-for="@Model.EndDate" required>
                                </div>

                            </div>
                            &nbsp;
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Maximum Capacity</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="MaximumCapacity" value="@Model.MaximumCapacity">
                                </div>
                            </div>

                            &nbsp;
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Is Active</label>
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="@Model.IsActive" />
                                    </label>
                                </div>
                            </div>
                            &nbsp;
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Last Changed By</label>

                                <label for="inputEmail3" class="form-control label-default">@Model.LastChangedBy</label>
                            </div>
                            &nbsp;
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Last Updated</label>

                                <label for="inputEmail3" class="form-control label-default">@UtilityService.ShowDateTime(@Model.LastChangedDate)</label>

                            </div>


                            <input type="hidden" name="CourseIntakeID" value="@Model.CourseIntakeID" />
                            <input type="hidden" name="CourseID" value="@Model.CourseID" />
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Update</button>
                            <a class="btn btn-danger" asp-controller="Courses" asp-action="ActionCourseIntake" asp-route-courseIntakeId="@Model.CourseIntakeID" asp-route-courseid="@Model.CourseID">Delete</a>
                            <a class="btn btn-info" asp-controller="Courses" asp-action="ViewCourse" asp-route-id="@Model.CourseID">View More Details</a>
                            <a class="btn btn-default" asp-controller="Courses" asp-action="Courses">Cancel</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- /.box -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Additional Information
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <!-- Nav tabs -->

                    <ul class="nav nav-tabs">
                        @if (UtilityService.HasPermission(Permissions.View_Course_Intake_Register))
                        {
                            <li class="active">
                                <a href="#Register" data-toggle="tab">Attendance Register</a>
                            </li>
                        }

                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane fade in active " id="Register">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    Attendance Register
                                </div>
                            </div>
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <div class="dataTable_wrapper">
                                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                        <thead>
                                            <tr>
                                                <th>Topic</th>
                                                <th>Attendance Date</th>
                                                <th>Requested By</th>
                                                <th>Download</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.AttendanceRegisters != null)
                                            {

                                                foreach (var item in Model.AttendanceRegisters)
                                                {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.CourseTopic.Name)</td>
                                                @if (UtilityService.HasPermission(Permissions.View_Course_Intake_Register))
                                                {
                                                    <td><a asp-controller="Courses" asp-action="ViewAttendanceRegister" asp-route-id="@item.AttendanceDate">@item.AttendanceDate</a></td>
                                                }
                                                else
                                                {
                                                    <td>@Html.DisplayFor(modelItem => item.AttendanceDate)</td>
                                                }

                                                <td>@Html.DisplayFor(modelItem => item.RequestedBy)</td>
                                                <td><a asp-controller="Courses" asp-action="DownloadRegister" asp-route-id="@item.AttendanceRegisterID">Download</a></td>
                                                <td><a asp-controller="Courses" asp-action="DeleteRegister" asp-route-id="@item.AttendanceRegisterID">Delete</a></td>
                                            </tr>
                                                }
                                            }
                                    </table>
                                </div>
                            </div>

                            <div class="box-footer">
                                @if (UtilityService.HasPermission(Permissions.Generate_Attendance_Register))
                                {<a class="btn btn-success  pull-right" data-toggle="modal" data-target="#MarkRegister">Generate Attendance Register</a>
                                }
                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>

            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="MarkRegister" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Model.Course.Title </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-controller="Courses" asp-action="MarkRegister">
                <div class="modal-body">
                    <input type="hidden" name="CourseIntakeID" value="@Model.CourseIntakeID" />
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Intake</label>
                        <label for="inputEmail3" class="form-control label-default">@Model.Duration</label>
                    </div>
                    &nbsp;
                    &nbsp;
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Session</label>
                        <div class="col-sm-10">
                            <select asp-for="CourseTopic" class="form-control" asp-items="ViewBag.CourseTopicList">
                                <option value="">----</option>
                            </select>
                        </div>
                    </div>
                    &nbsp;
                    &nbsp;
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Requested By</label>
                        <label for="inputEmail3" class="form-control label-default">@UtilityService.CurrentUserName</label>
                    </div>
                    &nbsp;
                    &nbsp;
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Attendance Date</label>
                        <div class="col-sm-10">
                            <input type="date" class="form-control" name="AttendanceDate" ID="AttendanceDate">
                        </div>
                    </div>
                    &nbsp;
                    <div class="form-group">
                        <div class="dataTable_wrapper">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">

                                <tr>
                                    @{
                                        if (ViewBag.EnrolmentList != null)
                                        {
                                            int cnt = 0;
                                            List<CheckBoxListItem> students = ViewBag.EnrolmentList;

                                            foreach (var student in students)
                                            {
                                                if (cnt++ % 3 == 0)
                                                {
                                                @:</tr><tr>
                                                }
                                                @:<td>
                                                    <input type="checkbox"
                                                           name="enrolmentList"
                                                           value="@student.ID"
                                                           @(Html.Raw(student.IsChecked ? "checked=\"checked\"" : "")) />
                                                    @student.Name
                                                @:</td>
                                            }
                                        @:</tr>
                                    }
                                    }
                                </table>
                            </div>

                        </div>

                        <input type="hidden" name="CourseIntakeID" value="@Model.CourseIntakeID" />

                    </div>
                    <div class="modal-footer">
                        @if (UtilityService.HasPermission(Permissions.Update_Course_Intake))
                        {
                            <button type="submit" class="btn btn-primary">Save Register</button>
                        }
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            document.getElementById('AttendanceDate').value = new Date().toISOString().substring(0, 10)
        });
    </script>
