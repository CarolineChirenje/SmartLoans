@model SmartDomain.CourseOutline
@using SmartHelper;
<section class="content-header">
    <h1>
        Sessions
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">

            <h3 class="box-title">@Model.Course.Title</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" method="post" action="/Courses/ViewCourse">
            @if (ViewData["Error"] != null)
            {<div class="container">
                    <strong class="">@ViewData["Error"].ToString()</strong>
                    <div class="panel panel-danger">
                        <div class="panel-body">@Html.ValidationSummary()</div>
                    </div>

                </div>
            }
            <div class="box-body">

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Title</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Title" value="@Model.Course.Title">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Credits</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Credits" value="@Model.Course.Credits">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Sessions</label>
                    <div class="col-sm-10">
                        <a asp-controller="Courses" asp-action="CourseOutlines" asp-route-id="@Model.CourseID">@Model.Course.CourseOutlines?.Count()</a>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Active Status</label>
                    <div class="col-sm-2">
                        <label class="checkbox-inline">
                            @Html.CheckBoxFor(model => model.Course.IsActive)
                        </label>
                    </div>
                </div>


                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Last Changed By</label>
                    <div class="col-sm-10">
                        <label for="inputEmail3" class="form-control label-default">@Model.Course.LastChangedBy</label>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Last Updated</label>
                    <div class="col-sm-10">
                        <label for="inputEmail3" class="form-control label-default">@UtilityService.ShowDateTime(@Model.Course.LastChangedDate)</label>
                    </div>
                </div>
                <input type="hidden" name="CourseID" value="@Model.CourseID" />
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <a class="btn btn-default" asp-controller="Home" asp-action="Dashboard">Cancel</a>
                <button type="submit" class="btn btn-info pull-right">Update</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
    <!-- /.box -->
</section>

<!-- Modal -->
<div class="modal fade" id="CourseOutline" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Model.Course.Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-controller="Courses" asp-action="AddCourseOutline">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Comment:</label>
                        <textarea class="form-control" name="Comment"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">DueDate:</label>
                        <input type="date" class="form-control" name="DueDate">
                    </div>
                    <div class="form-group">
                        <div>
                            <div class="checkbox">
                                <label>
                                    <input type="hidden" name="IsActive" value="false" />
                                    <input type="checkbox" name="IsActive"> Is Active
                                </label>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" name="CourseID" value="@Model.CourseID" />

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save Note</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                </div>
            </form>

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Information
                        </div>
                        <!-- /.panel-heading -->
                        <form method="post" asp-controller="Courses" asp-action="ViewCoursesNote">

                            <div class="modal-body">

                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label">Comment:</label>
                                    <input type="text" class="form-control" value="@Model.Name">
                                </div>
                                
                                <div class="form-group">
                                    <div>
                                        <div class="checkbox">
                                            <label>
                                                <input type="hidden" name="IsActive" value="false" />
                                                <input type="checkbox" name="IsActive"> Is Active
                                            </label>
                                        </div>
                                    </div>
                                </div>



                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label">Last Changed By</label>

                                    <label for="inputEmail3" class="form-control label-default">@Model.LastChangedBy</label>

                                </div>

                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label">Last Updated</label>

                                    <label for="inputEmail3" class="form-control label-default">@UtilityService.ShowDateTime(@Model.LastChangedDate)</label>

                                </div>



                                <input type="hidden" name="CourseOutlineID" value="@Model.CourseOutlineID" />

                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Update</button>
                                
                                <a class="btn btn-danger" asp-controller="Courses" asp-action="ActionCourseOutline" asp-route-outlineid="@Model.CourseOutlineID" asp-route-courseid="@Model.CourseID">Delete</a>
                                <a class="btn btn-info" asp-controller="Courses" asp-action="ViewCourse" asp-route-id="@Model.CourseID">View More Sessions</a>
                                <a class="btn btn-default" asp-controller="Home" asp-action="Dashboard">Cancel</a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>