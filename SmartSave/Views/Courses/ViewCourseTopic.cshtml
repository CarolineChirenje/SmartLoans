@model SmartDomain.CourseTopic
@using SmartHelper;
<section class="content-header">
    <h1>
        Topics
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">

            <h3 class="box-title">@Model.Course.Title</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" method="post" action="/Courses/ViewCourse">
            @if (TempData["Error"] != null)
            {<div class="container">
                    <div class="text-danger">@TempData["Error"].ToString()</div>
                </div>
                <br />
            }
            <div class="container">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>
            @if (TempData["Success"] != null)
            {<div class="container">
                    <div class="text-success">@TempData["Success"].ToString()</div>
                </div>
            }
            @if (TempData["Warning"] != null)
            {<div class="container">
                    <div class="text-warning">@TempData["Warning"].ToString()</div>
                </div>
            }
            <div class="box-body">

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Title</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Title" value="@Model.Course.Title">
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Topics</label>
                    <div class="col-sm-10">
                        <a asp-controller="Courses" asp-action="CourseTopics" asp-route-id="@Model.CourseID">@Model.Course.CourseTopics?.Count()</a>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Is Active</label>
                    <div class="col-sm-2">
                        <label class="checkbox-inline">
                            @Html.CheckBoxFor(model => model.Course.IsActive)
                        </label>
                    </div>
                </div>


                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Last Changed By</label>
                    <div class="col-sm-10">
                        <label for="inputEmail3" class="form-control label-default">@Model.Course.LastChangedBy</label>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Last Updated</label>
                    <div class="col-sm-10">
                        <label for="inputEmail3" class="form-control label-default">@UtilityService.ShowDateTime(@Model.Course.LastChangedDate)</label>
                    </div>
                </div>
                <input type="hidden" name="CourseID" value="@Model.CourseID" />
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <a class="btn btn-default" asp-controller="Courses" asp-action="Courses">Cancel</a>
                <button type="submit" class="btn btn-info pull-right">Update</button>
            </div>
            <!-- /.box-footer -->
        </form>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Information
                    </div>
                    <!-- /.panel-heading -->
                    <form method="post" asp-controller="Courses" asp-action="ViewCourseTopic">

                        <div class="modal-body">
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Topic:</label>
                                <input type="text" class="form-control" name="Name" value="@Model.Name">
                            </div>

                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Sessions</label>
                                <div class="col-sm-10">
                                    <a data-toggle="modal" data-target="#Sessions">@Model.CourseSessions?.Count()</a>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Is Active</label>
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="@Model.IsActive" />
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Last Changed By</label>

                                <label for="inputEmail3" class="form-control label-default">@Model.LastChangedBy</label>

                            </div>

                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Last Updated</label>

                                <label for="inputEmail3" class="form-control label-default">@UtilityService.ShowDateTime(@Model.LastChangedDate)</label>

                            </div>
                            <input type="hidden" name="CourseTopicID" value="@Model.CourseTopicID" />
                            <input type="hidden" name="CourseID" value="@Model.CourseID" />
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Update</button>
                            <a class="btn btn-danger" asp-controller="Courses" asp-action="ActionCourseTopic" asp-route-outlineid="@Model.CourseTopicID" asp-route-courseid="@Model.CourseID">Delete</a>
                            <a class="btn btn-info" asp-controller="Courses" asp-action="ViewCourse" asp-route-id="@Model.CourseID">View More Details</a>
                            <a class="btn btn-default" asp-controller="Courses" asp-action="Courses">Cancel</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- /.box -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Additional Information
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <!-- Nav tabs -->

                    <ul class="nav nav-tabs">
                        @if (UserAppData.HasPermission(Permissions.View_Course_Session))
                        {
                            <li class="active">
                                <a href="#Sessions" data-toggle="tab">Sessions</a>
                            </li>
                        }
                      
                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane fade in active " id="Sessions">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    Sessions
                                </div>
                            </div>
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <div class="dataTable_wrapper">
                                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                        <thead>
                                           
                                            <tr>
                                                <th>Name</th>
                                                <th>Is Active</th>
                                                <th>Action</th>
                                            </tr>
                                            
                                        </thead>
                                        <tbody>
                                            @if (Model.CourseSessions != null)
                                            {

                                                foreach (var item in Model.CourseSessions)
                                                {
                                                    <tr>
                                                        @{
                                                            string activeStatus = UtilityService.ShowYesOrNo(item.IsActive);

                                                        }
                                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                                        <td>@activeStatus</td>
                                                        <td><a target="_blank" asp-controller="Courses" asp-action="ViewCourseSession" asp-route-sessionid="@item.CourseSessionID" asp-route-coursetopicid="@item.CourseTopicID">View</a> | <a asp-controller="Courses" asp-action="ActionCourseSession" asp-route-sessionid="@item.CourseSessionID" asp-route-coursetopicid="@item.CourseTopicID">Delete</a></td>
                                                    </tr>
                                                }
                                            }
</table>
                                </div>
                            </div>

                            <div class="box-footer">
                                @if (UserAppData.HasPermission(Permissions.Add_Course_Session))
                                {
                                    <a class="btn  btn-small btn-success pull-right" data-toggle="modal" data-target="#SessionForm">Add Session</a>
                                }
                            </div>
                        </div>
                   
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>

            </div>
        </div>
    </div>
</section>
<div class="modal fade" id="SessionForm" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Model.Name</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-controller="Courses" asp-action="AddCourseSession">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Topic:</label>
                        <input type="text" class="form-control" value="@Model.Name" disabled>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Session:</label>
                        <input type="text" class="form-control" name="Name">
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label"> Is Active</label>
                        <div class="checkbox">
                            <label class="checkbox-inline">
                                <input type="checkbox" data-val="true" id="IsActive"
                                       name="IsActive" value="true">
                            </label>
                        </div>
                    </div>
                    <input type="hidden" name="CourseTopicID" value="@Model.CourseTopicID" />

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save Session</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                </div>
            </form>
        </div>
    </div>
</div>
