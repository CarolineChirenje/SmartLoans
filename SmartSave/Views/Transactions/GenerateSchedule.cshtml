@model IEnumerable<SmartDomain.ClientDeductionDetails>
@using SmartHelper;
@{
    TempData["Title"] = "Deductions";
}

<section class="content-header">
    <h1>
        @TempData["Title"]
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">@TempData["Title"]</li>
    </ol>
</section>
 <!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Deduction Schedule</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    @if (TempData["Error"] != null)
                    {<div class="container">
                            <strong class="">@TempData["Error"].ToString()</strong>
                            <div class="panel panel-danger">
                                <div class="panel-body">@Html.ValidationSummary()</div>
                            </div>
                        </div>
                    }
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>

                                    <th>Name</th>
                                    <th>Invoice Number</th>
                                    <th>Occupation</th>
                                    <th>Salary</th>
                                    <th>Product</th>
                                    <th>Amount Due</th>
                                    <th>Due Date</th>
                                </tr>
                            </thead>
                            <tbody class="odd gradeX">
                                @foreach (var item in Model)
                                {
                                <tr>
                                    @{
                                        string duedate = UtilityService.ShowDate(item.ClientDeduction.DueDate);
                                                                        }
                                    @if (UtilityService.HasPermission(Permissions.View_User))
                                    {
                                        <td><a asp-controller="Client" asp-action="ViewClient" asp-route-id="@item.ClientID">@item.Client.ClientFullName</a></td>
                                    }
                                    else
                                    {
                                        <td>@item.Client.ClientFullName</td>
                                    }
                                    <td>@item.InvoiceNumber</td>
                                    <td>@Html.DisplayFor(modelItem => item.Client.Occupation)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Client.Salary)</td>
                                    @if (UtilityService.HasPermission(Permissions.View_Product))
                                    {
                                        <td><a asp-controller="Product" asp-action="ViewProduct" asp-route-id="@item.ProductID">@item.Product.Name</a></td>
                                    }
                                    else
                                    {
                                        <td>@item.Product.Name</td>
                                    }


                                    <td>@Html.DisplayFor(modelItem => item.DeductedAmount)</td>
                                    <td>@duedate</td>


                                </tr>
                                }
                        </table>
                    </div>
                </div>
                <div class="box-footer">
                 
                        <a class="btn btn-success pull-right" asp-controller="Transactions" asp-action="PrintSchedule" asp-route-id="0">Print Schedule</a><br />
                   
                    <a class="btn btn-default" asp-controller="Home" asp-action="Dashboard">Cancel</a>

                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
