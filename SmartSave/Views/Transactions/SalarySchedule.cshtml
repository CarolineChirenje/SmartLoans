@model IEnumerable<SmartDomain.ClientSchedule>
@using SmartHelper;
@{
    TempData["Title"] = "Employees on Schedule";
}

<section class="content-header">
    <h1>
        @TempData["Title"]
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">@TempData["Title"]</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Manage Schedule List</h3>
                </div>
                <form class="form-horizontal" method="post" action="GenerateSchedule">

                    <!-- /.box-header -->
                    <div class="box-body">
                        @if (TempData["Error"] != null)
                        {<div class="container">
                                <strong class="">@TempData["Error"].ToString()</strong>
                                <div class="panel panel-danger">
                                    <div class="panel-body">@Html.ValidationSummary()</div>
                                </div>
                            </div>
                        }
                        <div class="dataTable_wrapper">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Name</th>
                                        <th>Product</th>
                                        <th>Occupation</th>
                                        <th>Salary</th>
                                        <th>Due Date</th>


                                    </tr>
                                </thead>
                                <tbody class="odd gradeX">

                                    @{ var clientList = Model.ToList(); }
                                    @for (int i = 0; i < clientList.Count(); i++)
                                    {


                                        <tr>
                                            @{
                                                string dueDate = UtilityService.ShowDate(clientList[i].CutOffDate);

                                            }
                                            <td align="center"><input type="checkbox"  id="checkBoxAll" name="ClientProductID" value="@clientList[i].ClientProductID" /></td>
                                            @if (UtilityService.HasPermission(Permissions.View_Client))
                                            {
                                                <td><a target="_blank" asp-controller="Client" asp-action="ViewClient" asp-route-id="@clientList[i].ClientID">@clientList[i].ClientFullName</a></td>
                                            }
                                            else
                                            {
                                                <td>@clientList[i].ClientFullName</td>
                                            }
                                            <td>@clientList[i].ProductName</td>
                                            <td>@clientList[i].Occupation</td>
                                            <td>@clientList[i].Salary</td>

                                            <td>@dueDate</td>
                                          
                                        </tr>
                                       
                                    }
                            </table>
                        </div>
                    </div>
                    <div class="box-footer">
                        @if (UtilityService.HasPermission(Permissions.Generate_Schedules))
                        {<button type="submit" class="btn btn-success pull-right">Generate Schedule</button><br />
                        }
                        <a class="btn btn-default" asp-controller="Home" asp-action="Dashboard">Cancel</a>

                    </div>
                    <!-- /.box-body -->
                </form>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<script type="text/javascript">

        $(document).ready(function () {
         //   $('#dataTables-example').DataTable();
            $('#checkBoxAll').click(function () {
                if ($(this).is(":checked")) {
                    $(".chkCheckBoxId").prop("checked", true)
                }
                else {
                    $(".chkCheckBoxId").prop("checked", false)
                }
            });
        });
</script> 