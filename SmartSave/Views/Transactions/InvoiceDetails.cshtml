@model IEnumerable<SmartDomain.ClientDeductionDetails>
@using SmartHelper;
@{
    TempData["Title"] = "Deductions";
}

<section class="content-header">
    <h1>
        @TempData["Title"]
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">@TempData["Title"]</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">
                        @if (TempData["InvoiceNumber"] != null)
                        {
                            @TempData["InvoiceNumber"].ToString();
                        }
                    </h3>
                </div>
                <!-- /.box-header -->
                <form class="form-horizontal" method="post" action="/Transactions/DeleteInvoiceEntries">
                    <div class="box-body">
                        @if (TempData["Error"] != null)
                        {<div class="container">
                                <strong class="">@TempData["Error"].ToString()</strong>
                                <div class="panel panel-danger">
                                    <div class="panel-body">@Html.ValidationSummary()</div>
                                </div>
                            </div>
                        }

                        <div class="dataTable_wrapper">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Select To Delete</th>
                                        <th>Affiliation</th>
                                        <th>Name</th>
                                        <th>Occupation</th>
                                        <th>Salary</th>
                                        <th>Product</th>
                                        <th>Invoice Number</th>
                                        <th>Sub Invoice Number</th>
                                        <th>Amount Due</th>

                                    </tr>
                                </thead>
                                <tbody class="odd gradeX">
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            @{
                                                string affiliation = String.Empty;
                                                if (UtilityService.IsNotNull(item.Client.ClientGroup))
                                                {
                                                    affiliation = item.Client.ClientGroupID == (int)Affiliation.Individual ? "Individual" : (item.Client.CompanyID != null ? item.Client.Company.Name : "");
                                                }
                                            }

                                            <td align="center"><input type="checkbox" id="checkBoxAll" name="ClientDeductionDetailID" value="@item.ClientDeductionDetailID" /></td>
                                            <td>@affiliation</td>
                                            @if (UtilityService.HasPermission(Permissions.View_User))
                                            {
                                                <td><a asp-controller="Client" asp-action="ViewClient" asp-route-id="@item.ClientID">@item.Client.ClientFullName</a></td>
                                            }
                                            else
                                            {
                                                <td>@item.Client.ClientFullName</td>
                                            }
                                            <td>@Html.DisplayFor(modelItem => item.Client.Occupation)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Client.Salary)</td>
                                            @if (UtilityService.HasPermission(Permissions.View_Product))
                                            {
                                                <td><a asp-controller="Product" asp-action="ViewProduct" asp-route-id="@item.ProductID">@item.Product.Name</a></td>
                                            }
                                            else
                                            {
                                                <td>@item.Product.Name</td>
                                            }
                                            <td>@item.ClientDeductionID</td>
                                            <td>@item.InvoiceNumber</td>

                                            <td>@Html.DisplayFor(modelItem => item.DeductedAmount)</td>



                                        </tr>
                                    }
                            </table>
                        </div>
                    </div>
                    <div class="box-footer">

                        <a class="btn btn-success pull-right" asp-controller="Transactions" asp-action="PrintSchedule" asp-route-id="0">Print Schedule</a><br />
                        <a class="btn btn-default" asp-controller="Home" asp-action="Dashboard">Cancel</a>
                        @if (UtilityService.HasPermission(Permissions.Remove_Invoice_Entries))
                        {<button type="submit" class="btn btn-danger">Remove Multiple Invoice Entries</button>
                        }

                    </div>

                    <!-- /.box-body -->
                </form>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
