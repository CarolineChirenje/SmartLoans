    function CalculateTotal() {


        //Deposit = 1,
        //    Interest_Rate = 2,
        //    Minimum_Charge,
        //    Documentation_Fee,
        //    Fixed_Rate,
        //    Principal,
        //    Discount,
        //    Principal_Measure
        console.log("Product ID " + ProductID);
        var deposit = 0.00;
        var minCharge = 0.00;
        var documentationFee = 0.00;
        var interestRate = 0.00;
        var fxRate = 0.00;

        if (ProductID > 0) {
            toDecimal(getFee(1));
            deposit = toDecimal(localStorage.getItem(1));
            toDecimal(getFee(3));
            minCharge = toDecimal(localStorage.getItem(3));
