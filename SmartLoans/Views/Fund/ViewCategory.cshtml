@model SmartDomain.FundCategory
@using SmartHelper;
<section class="content-header">
    <h1>
        Categories
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">

            <h3 class="box-title">@Model.Fund.Name</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" method="post" action="/Fund/ViewFund">

            @if (TempData["Error"] != null)
            {<div class="container">
                    <div class="text-danger">@TempData["Error"].ToString()</div>
                </div>
                <br />
            }
            <div class="container">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>

            @if (TempData["Success"] != null)
            {<div class="container">
                    <div class="text-success">@TempData["Success"].ToString()</div>
                </div>
            }
            @if (TempData["Warning"] != null)
            {<div class="container">
                    <div class="text-warning">@TempData["Warning"].ToString()</div>
                </div>
            }
            <div class="box-body">

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Name" value="@Model.Fund.Name">
                    </div>
                </div>



                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Is Active</label>
                    <div class="col-sm-2">
                        <label class="checkbox-inline">
                            @Html.CheckBoxFor(model => model.Fund.IsActive)
                        </label>
                    </div>
                </div>


                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Last Changed By</label>
                    <div class="col-sm-10">
                        <label for="inputEmail3" class="form-control label-default">@Model.Fund.LastChangedBy</label>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Last Updated</label>
                    <div class="col-sm-10">
                        <label for="inputEmail3" class="form-control label-default">@UtilityService.ShowDateTime(@Model.Fund.LastChangedDate)</label>
                    </div>
                </div>
                <input type="hidden" name="FundID" value="@Model.Fund.FundID" />
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <a class="btn btn-default" asp-controller="Fund" asp-action="Fund">Cancel</a>
                <button type="submit" class="btn btn-info pull-right">Update</button>
            </div>
            <!-- /.box-footer -->
        </form>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Information
                    </div>
                    <!-- /.panel-heading -->
                    <form method="post" asp-controller="Fund" asp-action="ViewFundCategory">

                        <div class="modal-body">
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Category:</label>
                                <input type="text" class="form-control" name="Name" value="@Model.Name">
                            </div>

                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Is Active</label>
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="@Model.IsActive" />
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Last Changed By</label>

                                <label for="inputEmail3" class="form-control label-default">@Model.LastChangedBy</label>

                            </div>

                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Last Updated</label>

                                <label for="inputEmail3" class="form-control label-default">@UtilityService.ShowDateTime(@Model.LastChangedDate)</label>

                            </div>
                            <input type="hidden" name="FundCategoryID" value="@Model.FundCategoryID" />
                            <input type="hidden" name="FundID" value="@Model.FundID" />
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Update</button>
                            <a class="btn btn-danger" asp-controller="Fund" asp-action="ActionFundCategory" asp-route-Categoryid="@Model.FundCategoryID" asp-route-Fundid="@Model.FundID">Delete</a>
                            <a class="btn btn-info" asp-controller="Fund" asp-action="ViewFund" asp-route-id="@Model.FundID">View More Details</a>
                            <a class="btn btn-default" asp-controller="Fund" asp-action="Fund">Cancel</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- /.box -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Additional Information
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <!-- Nav tabs -->

                    <ul class="nav nav-tabs">

                        <li class="active">
                            <a href="#FundCategory" data-toggle="tab">Category Items </a>
                        </li>

                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content">

                        <div class="tab-pane fade in active " id="FundCategory">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    Information
                                </div>
                            </div>
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <div class="dataTable_wrapper">
                                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Is Active</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.FundCategoryItems != null)
                                            {

                                                foreach (var item in Model.FundCategoryItems)
                                                {
                                                    <tr>
                                                        @{
                                                            string activeStatus = UtilityService.ShowYesOrNo(item.IsActive);

                                                        }
                                                        <td>@Html.DisplayFor(modelItem => item.FundItem.Name)</td>
                                                        <td>@activeStatus</td>
                                                        <td><a asp-controller="FundItem" target="_blank" asp-action="ViewFundItem"  asp-route-id="@Model.FundID">View</a> | <a asp-controller="Funds" asp-action="ActionFundCategory" asp-route-Categoryid="@item.FundCategoryID" asp-route-Fundid="@item.FundItemID">Remove Item</a></td>
                                                    </tr>
                                                                }
                                                            }
                                    </table>
                                </div>
                            </div>

                            <div class="box-footer">
                                <a class="btn  btn-small btn-success pull-right" data-toggle="modal" data-target="#AddFundCategoryItem">Add Category Item</a>
                            </div>
                        </div>

                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>

            </div>
        </div>
    </div>

</section>

<div class="modal fade" id="AddFundCategoryItem" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Model.Name</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-controller="Fund" asp-action="AddFundCategoryItem">
                <div class="modal-body">
                    <div class="panel-body">
                        <div class="dataTable_wrapper">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody class="odd gradeX">
                                    @{ List<CheckBoxListItem> funditemList = ViewBag.FundItemList;
                                        if (funditemList != null)
                                        {
                                        @foreach (var item in funditemList)
                                        {
                                            <tr>
                                            
                                                @if (UserAppData.HasPermission(Permissions.View_Fund_Item))
                                                {
                                                    <td><a asp-controller="FundItem" asp-action="ViewFindItem" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.Name)</a> </td>
                                                }
                                                else
                                                {
                                                    <td>@Html.DisplayFor(modelItem => item.Name) </td>
                                                }
                                            <td><a asp-controller="Fund" asp-action="AddFundCategoryItem" asp-route-FundCategoryID="@Model.FundCategoryID"  asp-route-FundItemID="@item.ID">Add</a> </td>
                                                
                                            </tr>
                                        } }
                                        }
                            </table>
                        </div>
                    </div>

                    <input type="hidden" name="FundCategoryID" value="@Model.FundCategoryID" />

                </div>
                <div class="modal-footer">
                    @*<button type="submit" class="btn btn-primary">Save Fund Items </button>*@
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                </div>
            </form>
        </div>
    </div>
</div>

